---
import { late } from "astro:schema";

interface Props {
  about: {
    curriculumVitae: string;
    carrera: string;
    perfil: string;
    habilidades: string[];
    idiomas: {
      español: string;
      inglés: string;
      italiano: string;
    };
    educacion: {
      institucion: string;
      titulo: string;
      anioGraduacion: number;
    }[];
    experienciaLaboral: {
      empresa: string;
      cargo: string;
      periodo: string;
      responsabilidades: string[];
    }[];
    intereses: string[];
    logros: string[];
    disponibilidad: { modalidad: string[]; jornada: string[] };
  };
}

const { about } = Astro.props;
const {
  carrera,
  perfil,
  habilidades,
  idiomas,
  educacion,
  experienciaLaboral,
  intereses,
  logros,
  disponibilidad,
} = about;
---

<section id="about">
  <h3>{carrera}</h3>
  <p>{perfil}</p>
  <ul>
    {
      habilidades?.map((habilidad) => {
        return <li>{habilidad}</li>;
      })
    }
  </ul>
  <ul>
    <li>Español: {idiomas.español}</li>
    <li>Inglés: {idiomas.inglés}</li>
    <li>Italiano: {idiomas.italiano}</li>
  </ul>
</section>

<style>
  #about {
    width: 600px;
    height: 100%;
    background-color: rgba(255, 255, 255, 0.1);
    backdrop-filter: blur(5px);
    margin: auto;
    overflow-y: scroll;
  }
</style>
