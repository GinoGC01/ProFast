---
import Education from "../icons/education.astro";
import Logros from "../icons/logros.astro";

interface Props {
  about: {
    curriculumVitae: string;
    carrera: string;
    perfil: string;
    habilidades: string[];
    idiomas: {
      español: string;
      inglés: string;
      italiano: string;
    };
    educacion: {
      institucion: string;
      titulo: string;
      anioGraduacion: number;
    }[];
    experienciaLaboral: {
      empresa: string;
      cargo: string;
      periodo: string;
      responsabilidades: string[];
    }[];
    intereses: string[];
    logros: string[];
    disponibilidad: { modalidad: string[]; jornada: string[] };
  };
}

const { about } = Astro.props;
const {
  carrera,
  perfil,
  habilidades,
  idiomas,
  educacion,
  experienciaLaboral,
  intereses,
  logros,
  disponibilidad,
} = about;
---

<section id="about">
  <h2>{carrera}</h2>
  <p>{perfil}</p>
  <section class="disponibilidad">
    <h3>Disponibilidad</h3>
    <div class="modalidad">
      <h4>Modalidad:</h4>
      <ul>
        {
          disponibilidad.modalidad.map((modalidad) => {
            return <li>{modalidad} /</li>;
          })
        }
      </ul>
    </div>
    <div class="jornada">
      <h4>Jornada:</h4>
      <ul>
        {
          disponibilidad.jornada.map((jornada) => {
            return <li>{jornada} /</li>;
          })
        }
      </ul>
    </div>
  </section>

  <section class="habilidades">
    <h3>Habilidades</h3>
    <ul>
      {
        habilidades?.map((habilidad) => {
          return <li>{habilidad}</li>;
        })
      }
    </ul>
  </section>
  <section class="idiomas">
    <h3>Idiomas</h3>
    <ul>
      {
        idiomas.español != "none" && (
          <li>
            Español: <span>{idiomas.español}</span>
          </li>
        )
      }
      {
        idiomas.inglés != "none" && (
          <li>
            Inglés: <span>{idiomas.inglés}</span>
          </li>
        )
      }
      {
        idiomas.italiano != "none" && (
          <li>
            Italiano: <span>{idiomas.italiano}</span>
          </li>
        )
      }
    </ul>
  </section>
  <section class="educacion">
    <h3>Educación</h3>
    <ul>
      {
        educacion?.map(({ institucion, titulo, anioGraduacion }) => {
          return (
            <li>
              <span class="education-icon">
                <Education />
              </span>
              <div class="education-content">
                <strong>{titulo}</strong>
                <span>{institucion}</span>
                <span> - {anioGraduacion}</span>
              </div>
            </li>
          );
        })
      }
    </ul>
  </section>
  <section class="experienciaLaboral">
    <h3>Experiencia Laboral</h3>
    <ul>
      {
        experienciaLaboral?.map(
          ({ empresa, cargo, periodo, responsabilidades }) => {
            return (
              <li class="exp-card">
                <strong class="empresa">{empresa}</strong>
                <span class="cargo">{cargo}</span>
                <span class="periodo">{periodo}</span>
                <h4>Responsabilidades:</h4>
                <ul class="responsabilidades">
                  {responsabilidades?.map((responsabilidad) => {
                    return <li> - {responsabilidad}</li>;
                  })}
                </ul>
              </li>
            );
          }
        )
      }
    </ul>
  </section>

  <section class="logros">
    <h3>Logros</h3>
    <ul>
      {
        logros?.map((logro) => {
          return (
            <li>
              <span>
                <Logros />
              </span>
              {logro}
            </li>
          );
        })
      }
    </ul>
  </section>
  <section class="intereses">
    <h3>Intereses</h3>
    <ul>
      {
        intereses?.map((interes) => {
          return <li>{interes}</li>;
        })
      }
    </ul>
  </section>
</section>

<style>
  #about {
    width: 650px;
    height: 100%;
    background-color: rgba(255, 255, 255, 0.1);
    backdrop-filter: blur(5px);
    margin: auto;
    overflow-y: scroll;
    padding: 10px;
    color: #f1f1f1;
  }

  #about > h2 {
    font-size: 1.6em;
    margin-bottom: 20px;
  }

  #about > p {
    line-height: 1.3;
  }

  section {
    margin-block: 20px;
    border-top: 1px solid #808080;
    padding-top: 15px;
  }

  section h3 {
    margin-bottom: 15px;
    font-size: 1.4em;
    font-weight: 400;
    text-decoration: underline;
  }

  .modalidad h4 {
    margin-bottom: 7px;
  }

  .modalidad,
  .modalidad ul,
  .jornada,
  .jornada ul {
    display: flex;
    gap: 0.5em;
  }

  .modalidad ul,
  .jornada ul {
    color: #d1d1d1;
  }

  .habilidades ul,
  .intereses ul {
    display: flex;
    gap: 0.5em;
    flex-wrap: wrap;
  }

  .habilidades li,
  .intereses li {
    flex-shrink: 0;
    padding: 7px 12px;
    border-radius: 15px;
    border: 1px solid #d1d1d1;
    background-color: #2e2e2e;
  }

  .idiomas span {
    color: #d1d1d1;
  }

  .educacion li {
    display: flex;
    gap: 1em;
    margin-bottom: 1em;
    align-items: center;
  }

  .education-icon {
    display: grid;
    place-content: center;
    padding: 5px;
    border: 1px solid #808080;
    border-radius: 50%;
  }

  .education-content strong {
    display: block;
  }

  .education-content span {
    font-weight: 200;
  }

  .exp-card {
    position: relative;
    margin-bottom: 20px;
    width: 100%;
    border-bottom: 1px solid #808080;
    padding: 10px;
  }

  .exp-card strong {
    display: block;
    font-size: 1.2em;
  }

  .periodo {
    position: absolute;
    top: 10px;
    right: 20px;
    color: #d1d1d1;
    font-weight: 200;
  }

  .cargo {
    display: block;
    font-weight: 500;
    color: #d1d1d1;
    margin-bottom: 10px;
  }

  .responsabilidades li {
    padding-block: 5px;
  }

  .logros li {
    display: flex;
    gap: 0.5em;
    margin-bottom: 10px;
  }
</style>
