---
const { name } = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>{`${name} | ProFast`}</title>
  </head>
  <body>
    <a href="/" class="go-home">ProFast</a>
    <slot />
  </body>
</html>

<style is:global>
  * {
    box-sizing: border-box;
    padding: 0;
    margin: 0;
    list-style: none;
    text-decoration: none;
    font-family: 'Roboto','Arial',system-ui, -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, Oxygen, Ubuntu, Cantarell, 'Open Sans', 'Helvetica Neue', sans-serif;
  }
  html,
  body {
    width: 100%;
    height: 100%;
    background-color: #222222;
  }

  .go-home {
    display: block;
    font-size: 2.5em;
    text-align: center;
    padding-block: 15px;
    border-bottom: 1px solid white;
    margin-bottom: 30px;
    color: white;
  }
</style>
